<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Shop</title>
        <link rel="stylesheet" href="/Css/shop.css" />
        <%- include('layouts/head.ejs') %>
    </head>
    <body>
        <%- include('layouts/navbar.ejs') %>
        <div id="main">
            <h1>Items</h1>
            <div id="container">
                <% for(var n = 0; n < allItems.length; n++){%>
                    <div class="images">
                        
                        <% if(login){%>
                                <div class="image-box" onclick="window.location.href='/shop/<%= allItems[n]._id %>'">   
                                    <img class="img" src="<%= allItems[n].image %>" />
                                    <p class="price">₦<%= allItems[n].price %></p>      
                                </div>
                                <p class="name"><%= allItems[n].itemName %></p>
                        <%}else{%>
                            <div class="image-box">
                                <img class="img" src="<%= allItems[n].image %>" />
                                <p class="price">₦<%= allItems[n].price %></p>
                            </div>
                            <p class="name"><%= allItems[n].itemName %></p>
                        <%}%>                   
                    </div>
                <%}%>
            </div>
        </div>
        <% if(login){%>
            <button onclick="window.location.href='/item/new'"><i class="fas fa-plus"></i></button>
        <%}%>
        <%- include('layouts/scripts.ejs') %>
    </body>
</html>