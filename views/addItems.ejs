<!DOCTYPE html>
<html lang="en">
    <head>
        <title>Add New Item</title>
        <%- include('layouts/head.ejs') %>
    </head>
    <body>
        <%- include('layouts/navbar.ejs') %>
        <h1>Add New Item</h1>
        <form action="/item/store" method="POST" enctype="multipart/form-data">
            <% if(error && error.length > 0){%>
                <div class="alert alert-danger"><%= error %></div>
            <%}%>
            <div class="form-group">
                <label for="name">Item name: </label>
                <input id="name" class="form-control" type="text" name="itemName" placeholder="Enter the name of the item..." />
            </div>
            <div class="form-group">
                <label for="price">Price: </label>
                <input id="price" class="form-control" type="text" name="price" placeholder="Enter the price of the item..." />
            </div>
            <div class="form-group">
                <label for="image">Image: </label>
                <input type="file" class="form-control" id="image" name="image" />             
            </div>
            <button>Add</button>
        </form>
        <%- include('layouts/scripts.ejs') %>
    </body>
</html>